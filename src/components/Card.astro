---
export interface Props {
  language: string
  imgSrc: string
}

const { language, imgSrc } = Astro.props
---

<section class="content">
  <div class="card">
    <img src={imgSrc} alt={language} />
    <p>{language}</p>
    <div class="menu-text">
      <a class="menu-item" href={`/info/${language}`}>Teoría</a>
      <a class="menu-item">Código</a>
    </div>
  </div>
</section>

<style>
  .card {
    box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.5);
    background-color: #242424;
    transition: transform 0.3s ease;
    border: 1px solid #363636;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .card img {
    margin: 0 auto;
    width: 100px;
    object-fit: contain;
    padding: 2rem 2rem 0 2rem;
  }

  .card a {
    margin: 0.5rem 0;
  }

  .card:hover {
    transform: scale(1.08);
    cursor: pointer;
  }

  .menu-text {
    margin-top: auto;
    font-size: 14px;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    border: 1px solid #363636;
    text-align: center;
  }

  .menu-item {
    color: white;
    text-decoration: none;
    padding: 0.5rem;
  }

  .menu-item:hover {
    background-color: blueviolet;
  }

  .menu-item:first-child {
    border-right: 1px solid #363636;
  }

  .menu-text a {
    margin: 0;
  }
</style>
